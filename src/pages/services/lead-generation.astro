---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Unlock Your Business Potential with AlameinIT: Get Started Today!',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Lead Generation Landing Demo"
    title="Unlock Your Business Potential with AlameinIT: Get Started Today!"
    subtitle=" Elevate Your Business with Cutting-Edge IT Solutions. Welcome to AlameinIT, Your Trusted IT Partner."
    actions={[
      { variant: 'primary', text: 'Call to Action', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '#' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1597423498219-04418210827d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1674&q=80',
      alt: 'Magnet attracting screws. Lead generation landing page demo',
    }}
  />

  <CallToAction
    title="Request Callback"
    subtitle="Drop us your numbewr and we'll call you right back!"
    actions={[
      {
        variant: 'primary',
        text: 'Request Callback',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:phone',
      },
    ]}
  />
</Layout>
